{% extends 'base.html.twig' %}

{% block title %}  Mise à jour d'une couleur {% endblock %}


{% block body %}

    <h1>Mise à jour d'une couleur</h1>
    {% if method =='POST' %}
    <section>
      {% if success %}
        <p>couleur modifiée</p>
      {% else %}

        <p>Echec</p>
      {% endif %}
    </section>
    {% endif %}
    <form  method="post">
      <input type="text" name="nameEn" placeholder="Nom en anglais" value="{{color.nameEn}}">
      <input type="text" name="nameFr" placeholder="Nom en français" value="{{color.nameFr}}">
      <input type="text" name="hexa" placeholder="Couleur en hexadécimal" value="{{color.hexa}}">
      <button>Mettre à jour</button>

    </form>
  {% endblock %}
